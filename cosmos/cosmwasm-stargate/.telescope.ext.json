{
  "protoDirs": ["./proto"],
  "outPath": "./src/codegen",
  "options": {
    "interfaces": {
      "enabled": true,
      "useGlobalDecoderRegistry": true,
      "useUnionTypes": true
    },
    "prototypes": {
      "methods": {
        "toAmino": true,
        "fromAmino": true
      }
    },
    "aminoEncoding": {
      "enabled": true,
      "useLegacyInlineEncoding": false,
      "disableMsgTypes": true
    },
    "rpcClients": {
      "serviceImplement": {
        "Msg": {
          "type": "Tx"
        }
      },
      "instantOps": [
        {
          "className": "CosmWasmImpl",
          "include": {
            "patterns": ["cosmwasm.wasm.v1.*"]
          },
          "nameMapping": {
            "Msg": {
              "updateWasmParams": "cosmwasm.wasm.v1.updateParams"
            }
          }
        }
      ]
    }
  }
}
