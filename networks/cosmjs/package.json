{
  "name": "@cosmology/cosmjs",
  "author": "liujun93 <ljun8575@gmail.com>",
  "license": "MIT",
  "scripts": {
    "rename": "renamer -f \"/^package.dist.json$/\" -r \"package.json\" \"dist/*\"",
    "copy": "copyfiles -f ../../LICENSE-MIT ../../LICENSE-Apache dist; copyfiles package.dist.json README.md dist",
    "copy-and-rename": "npm run copy && npm run rename",
    "clean": "rimraf dist",
    "build": "npm run clean; tsc; tsc -p tsconfig.esm.json; npm run copy-and-rename",
    "pub": "cd dist && npm run pub",
    "symlink": "yarn link @uni-sign/utils @uni-sign/types @uni-sign/cosmos @uni-sign/cosmos-msgs @uni-sign/cosmos-query"
  },
  "dependencies": {
    "@uni-sign/cosmos": "^0.0.1",
    "@uni-sign/cosmos-msgs": "^0.0.1",
    "@uni-sign/cosmos-query": "^0.0.1",
    "@uni-sign/utils": "^0.0.1",
    "@uni-sign/types": "^0.0.1",
    "decimal.js": "^10.4.3",
    "@noble/hashes": "^1.3.1"
  }
}