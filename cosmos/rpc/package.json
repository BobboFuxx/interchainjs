{
  "name": "@cosmonauts/cosmos-rpc",
  "version": "1.0.0",
  "description": "Cosmos tendermint rpc client",
  "author": "liujun93 <ljun8575@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "proto:download": "rm -rf ./proto && ./scripts/download-proto.sh",
    "proto:codegen": "rm -rf ./src/codegen ./.telescope.json && npx telescope transpile --config ../../.telescope.json --config ./.telescope.ext.json && npx telescope transpile --config ../../.telescope.json --config ./.telescope.ext.tendermint.json",
    "proto:update": "yarn proto:download && yarn proto:codegen",
    "clear": "rimraf dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "imports": {
    ".": {
      "types": "./cjs/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@cosmonauts/core": "^1.0.0",
    "bech32": "^2.0.0"
  },
  "peerDependencies": {
    "@noble/hashes": "^1.3.1"
  }
}
