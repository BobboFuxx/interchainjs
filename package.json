{
  "name": "sign",
  "version": "1.0.0",
  "private": true,
  "description": "sign client for block-chain networks",
  "repository": "git@github.com:cosmology-tech/sign.git",
  "author": "liujun93 <ljun8575@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "cosmos/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "build": "lerna run build",
    "proto:download": "lerna run proto:download",
    "proto:codegen": "lerna run proto:codegen",
    "proto:update": "lerna run proto:update",
    "proto:update-test": "cd __test__/cosmos && ./scripts/update-proto.sh",
    "start-server": "cd __test__/cosmos && ./scripts/start-server.sh",
    "stop-server": "cd __test__/cosmos && ./scripts/stop-server.sh",
    "restart-server": "cd __test__/cosmos && ./scripts/stop-server.sh && ./scripts/start-server.sh",
    "test:cosmos": "cd __test__/cosmos && jest --testPathPattern=./src",
    "pub": "lerna publish",
    "clear": "lerna run clear --stream"
  },
  "devDependencies": {
    "@cosmjs/amino": "^0.31.3",
    "@cosmjs/proto-signing": "^0.31.3",
    "@cosmjs/stargate": "^0.31.3",
    "@cosmology/telescope": "^1.2.2",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.6.2",
    "lerna": "^7.4.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
